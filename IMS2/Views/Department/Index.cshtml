@model IEnumerable<IMS2.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>列表</h2>
<p class="text-success">@ViewBag.StatusMessage</p>

<p>
    @Html.ActionLink("创建新项", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentCategory.DepartmentCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentCategory.DepartmentCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.DepartmentId }) |
            @Html.ActionLink("详情", "Details", new { id=item.DepartmentId }) |
            @Html.ActionLink("删除", "Delete", new { id=item.DepartmentId })
        </td>
    </tr>
}

</table>
