@model IMS2.ViewModels.IndicatorGroupIndicatorView

@{
    ViewBag.Title = "详情";
}

<h2>详情</h2>

<div>
    <h4>指标组</h4>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.IndicatorGroupName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IndicatorGroupName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Remarks)
        </dd>
        @{ 
            int i = 1;
        }
        @foreach (var item in Model.Indicators)
        {
            
            <dt>
                指标#@i
            </dt>
            <dd>
                @Html.DisplayFor(model => item.IndicatorName)
            </dd>
            i++;
        }

    </dl>
</div>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.IndicatorGroupId }) |
    @Html.ActionLink("返回列表", "Index")
</p>
