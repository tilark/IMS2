@{
    ViewBag.Title = "惠州市第一人民医院指标监测系统";
}
<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">欢迎进入指标监测系统！</p>
</div>


<div class="col-md-12">
@if (User.IsInRole("修改科室指标值") || User.IsInRole("修改全院指标值") || User.IsInRole("Administrators"))
{ 
    <fieldset>
        <legend>
            业务处理
        </legend>
        <ul class="nav nav-pills">
            <li class="col-md-2">@Html.ActionLink("编辑指标值", "Index", "ProvidingDepartmentIndicatorAjax", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
        </ul>
    </fieldset>
}
    <p> <br /></p>

@if (User.IsInRole("查看全院指标值") || User.IsInRole("查看科室指标值") || User.IsInRole("Administrators"))
{ 
    <fieldset>
        <legend>
            指标数据
        </legend>
        <ul class="nav nav-pills">
            <li class="col-md-2">@Html.ActionLink("查看指标数据", "Index", "ShowDepartmentIndicatorValue", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
        </ul>
    </fieldset>
}
    <p> <br /></p>

@if (User.IsInRole("查看科室报表") || User.IsInRole("查看全院报表") || User.IsInRole("Administrators"))
{ 
    <fieldset>
        <legend>
            报表
        </legend>
        <ul class="nav nav-pills">
            <li class="col-md-2">@Html.ActionLink("导出报表", "Index", "Reporters", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
        </ul>
    </fieldset>
    }
    <p> <br /></p>

</div>

<div class="col-md-12">
    @if (User.IsInRole("修改全院指标值") || User.IsInRole("Administrators"))
    {
        <fieldset>
            <legend>
                指标监测
            </legend>
            <ul class="nav nav-pills">
                <li class="col-md-2">@Html.ActionLink("添加指标值", "Index", "ProvidingDepartmentIndicatorAjax", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
                <li class="col-md-2">@Html.ActionLink("自动获取数据", "Index", "AutoGetDataSource", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
                <li class="col-md-2">@Html.ActionLink("管理标准值", "Index", "DepartmentIndicatorStandards", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>

            </ul>
        </fieldset>
    }
    <p> <br /></p>

    @if (User.IsInRole("审核全院指标值") || User.IsInRole("Administrators"))
    { 
        <fieldset>
            <legend>
                审核指标
            </legend>
            <ul class="nav nav-pills">
                <li class="col-md-2">@Html.ActionLink("审核指标", "Index", "SearchDepartmentIndicator", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</li>
            </ul>

        </fieldset>
        }
    <p> <br /></p>

    </div>

    <div class="col-md-12">
        @Html.Partial("_AdminViewPartial")
    </div>
