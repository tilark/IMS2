@model IMS2.ViewModels.StatisticsDepartmentIndicatorValueViews.SatisticsSearchCondition
@{
    ViewBag.Title = "统计指标列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>统计指标列表</h2>
<fieldset class="col-md-12 panel panel-default">
    <legend class="text-primary">查找条件</legend>
    @using (Ajax.BeginForm("_List", "StatisticsDepartmentIndicatorValue", new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "statistics-indicator-info-list", LoadingElementId = "search-statistics-indicator-info-ajax", OnSuccess = "searchSatisticsIndicatorInfoSuccess" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="dl-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.IndicatorID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.IndicatorID, ViewBag.DepartmentSelect as SelectList, "-请选择-", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.Label("科室", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.DepartmentID, ViewBag.DepartmentSelect as SelectList, "-请选择-", htmlAttributes: new { @class = "form-control", id = "search-indicator-department-id" })
                </div>

            </div>
            <div class="form-group">
               @Html.LabelFor(model => model.DurationID, htmlAttributes: new {@class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.DurationID, ViewBag.DepartmentSelect as SelectList, "-请选择-", htmlAttributes: new { @class = "form-control"})
                </div>              
                @Html.Label("选择时间", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.SearchTime, new { htmlAttributes = new { @class = "form-control datetimepicker2", id = "search-indicator-time-id" } })
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-6">
                    <input type="submit" value="查询" class="btn btn-info" id="refresh-search-statistics-indicator-list-id" style="display:none" />
                    <img src="~/Images/ajax-loader.gif" style="display:none" id="search-statistics-indicator-info-ajax" />
                </div>
            </div>
        </div>
    }
</fieldset>

<div id="statistics-indicator-info-list" class="col-md-12">
</div>
